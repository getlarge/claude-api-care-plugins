{
  "name": "aip-openapi-reviewer",
  "version": "1.0.0",
  "description": "Review OpenAPI specifications against Google's API Improvement Proposals (AIP)",
  "type": "module",
  "main": "./src/index.js",
  "types": "./src/types.ts",
  "exports": {
    ".": {
      "import": "./src/index.js",
      "types": "./src/types.ts"
    },
    "./rules": {
      "import": "./src/rules.js"
    },
    "./formatters": {
      "import": "./src/formatters.js"
    }
  },
  "bin": {
    "aip-review": "./src/cli.js",
    "aip-discover": "./src/discover.js"
  },
  "scripts": {
    "review": "node src/cli.js",
    "discover": "node src/discover.js",
    "test": "node --test src/**/*.test.js",
    "test:integration": "node --test tests/integration.test.js",
    "test:plugin": "node --test tests/plugin.test.js",
    "test:all": "node --test src/**/*.test.js tests/**/*.test.js",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "openapi",
    "api",
    "aip",
    "google",
    "linter",
    "review",
    "rest",
    "swagger"
  ],
  "files": [
    "src/"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "optionalDependencies": {
    "yaml": "^2.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "compromise": "^14.14.4",
    "oas": "^28.5.0",
    "oas-normalize": "^15.4.0",
    "yaml": ">=2.0.0"
  },
  "peerDependenciesMeta": {
    "yaml": {
      "optional": true
    }
  }
}
