{
  "name": "@getlarge/aip-openapi-reviewer-mcp",
  "version": "1.0.0",
  "description": "MCP server exposing AIP OpenAPI reviewer as tools for AI agents",
  "type": "module",
  "main": "dist/server.bundle.js",
  "bin": {
    "aip-mcp-server": "dist/stdio.bundle.js"
  },
  "scripts": {
    "build": "npm run build:types && npm run build:bundle",
    "build:types": "tsc",
    "build:bundle": "node build.mjs",
    "dev": "tsc --watch --preserveWatchOutput & sleep 2 && node --watch dist/index.js",
    "dev:stdio": "tsc --watch --preserveWatchOutput & sleep 2 && node --watch dist/stdio.js",
    "start": "node dist/server.bundle.js",
    "start:stdio": "node dist/stdio.bundle.js",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "npm run build:types && node --import tsx --test 'src/**/*.test.ts'",
    "test:e2e": "npm run build:types && node --import tsx --test 'src/**/*.e2e-test.ts'"
  },
  "keywords": [
    "mcp",
    "openapi",
    "aip",
    "api-design",
    "linter",
    "oauth2"
  ],
  "author": "getlarge",
  "license": "Apache-2.0",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.69",
    "@platformatic/mcp": "^1.2.2",
    "@sinclair/typebox": "^0.34.0",
    "@fastify/type-provider-typebox": "^5.0.0",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.0",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.32.1"
  },
  "peerDependencies": {
    "@getlarge/aip-openapi-reviewer": "*"
  },
  "engines": {
    "node": ">=22.5.0"
  }
}
