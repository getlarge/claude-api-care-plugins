{
  "name": "@getlarge/aip-openapi-reviewer-mcp",
  "version": "1.0.0",
  "description": "MCP server exposing AIP OpenAPI reviewer as tools for AI agents",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "aip-mcp-server": "dist/stdio.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch --preserveWatchOutput & sleep 2 && node --watch dist/index.js",
    "dev:stdio": "tsc --watch --preserveWatchOutput & sleep 2 && node --watch dist/stdio.js",
    "start": "node dist/index.js",
    "start:stdio": "node dist/stdio.js",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "npm run build && node --import tsx --test src/**/*.test.ts",
    "test:e2e": "npm run build && node --import tsx --test src/e2e.test.ts"
  },
  "keywords": [
    "mcp",
    "openapi",
    "aip",
    "api-design",
    "linter"
  ],
  "author": "getlarge",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.0",
    "@sinclair/typebox": "^0.34.0",
    "@fastify/type-provider-typebox": "^5.0.0",
    "@fastify/rate-limit": "^10.0.0",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.0",
    "yaml": "^2.7.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.32.1"
  },
  "peerDependencies": {
    "@getlarge/aip-openapi-reviewer": "*"
  },
  "engines": {
    "node": ">=22.5.0"
  }
}
