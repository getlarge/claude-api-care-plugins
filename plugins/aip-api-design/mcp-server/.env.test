# Test environment configuration for Docker Compose
# Copy this to .env when testing with external services

# =============================================================================
# Storage Configuration
# =============================================================================

STORE_TYPE=postgres
DATABASE_URL=postgresql://aip:aip_secret@localhost:5432/aip_mcp

# =============================================================================
# S3-Compatible Storage (MinIO)
# =============================================================================

S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_BUCKET_SPECS=aip-specs
S3_BUCKET_FINDINGS=aip-findings
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=true

# =============================================================================
# Redis Configuration
# =============================================================================

REDIS_URL=redis://localhost:6379

# =============================================================================
# Server Configuration
# =============================================================================

PORT=4000
HOST=0.0.0.0
LOG_LEVEL=debug
AUTH_ENABLED=false

# =============================================================================
# MCP Server URL (for HTTP E2E tests)
# =============================================================================

MCP_SERVER_URL=http://localhost:4000
