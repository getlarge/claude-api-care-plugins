{
  "name": "claude-api-care-plugins",
  "private": true,
  "description": "Claude Code plugins for API hygiene and design",
  "type": "module",
  "workspaces": [
    "plugins/*/*"
  ],
  "overrides": {
    "@anthropic-ai/claude-agent-sdk": {
      "zod": "^4.1.13"
    }
  },
  "scripts": {
    "postinstall": "patch-package",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "build": "npm run build -w @getlarge/baume-reviewer && npm run build -w @getlarge/baume-mcp",
    "test": "npm run test --workspaces --if-present",
    "test:e2e": "npm run test:e2e --workspaces --if-present",
    "prepare": "test \"$HUSKY\" = \"0\" || husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "esbuild": "^0.24.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "patch-package": "^8.0.0",
    "prettier": "^3.4.2",
    "prettier-plugin-sort-json": "^4.0.0"
  },
  "dependencies": {}
}
